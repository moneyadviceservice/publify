<main role="main" tabindex="-1" id="main">
  <%= render 'shared/campaigns' if @lead_campaign %>

  <div class="l-index<%= ' l-index--campaign' if @lead_campaign %>">
    <div class="l-constrained">
      <div class="l-tiles">
        <div class="l-tiles__inner">
          <% @articles.each_with_index do |article, index| %>
            <%= render 'popular_tags' if index === 2 %>
            <%= render partial: 'article', object: article, locals: { index: index } %>
          <% end %>
          <div class="l-tile l-tile--archive">
            <a href="<%= archives_path %>" class="l-index-archive__link">
              All Articles
              <svg class="l-index-archive__link-arrow">
                <use xlink:href="#svg-arrow-right"></use>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
