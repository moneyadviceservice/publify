<% if article.excerpt? %>
  <%= article.excerpt %>
  <div class="extended">
    <p><%= link_to t(".continue_reading"), article_path(article.permalink) %></p>
  </div>
<% else %>
  <%= article.html(:body) %>
  <% if article.extended? %>
    <div class="extended">
      <p><%= link_to t(".continue_reading"), article_path(article.permalink) %></p>
    </div>
  <% end %>
<% end %>
