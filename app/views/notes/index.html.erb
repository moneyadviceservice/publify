<div class="hfeed">
  <% for note in @notes -%>
  <div class='h-entry hentry h-as-note'>
    <article>
      <p class='p-name entry-title e-content entry-content article'><%= note.html(:body) %></p>
      <footer>
        <small><%= link_to(display_date_and_time(note.published_at), note.permalink) %></small>
      </footer>
    </article>
        <hr>
  </div>
  <% end -%>
</div>

<%= paginate @notes, :params => { :script_name => ENV['RAILS_RELATIVE_URL_ROOT'] }, :next_label => "#{t(".next_page")} &raquo;", :previous_label => "&laquo; #{t('.previous_page')}" %>
