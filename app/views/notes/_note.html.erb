<article class='status'>
  <%= author_picture note %>
  <div class='p-name entry-title e-content entry-content article'><%= note.html(:body) %></div>
  <footer>
    <small>
      <%= link_to(display_date_and_time(note.published_at), note.permalink) %> |
      <%= link_to note.redirects.first.to_url, note.redirects.first.to_url %> |
      <%= author_link note %>
      <%- unless note.twitter_id.blank? %>
        <%=  " | #{link_to(t(".view_on_twitter"), note.twitter_url, {class: 'u-syndication', rel: 'syndication'})}" %>
    <%- end %>
    </small>
  </footer>
</article>

