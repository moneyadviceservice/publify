<td class="action"><input class= "feedback_check" type="checkbox" name="feedback_check[<%= comment.id %>]"></td>
<td class="state">
  <%= avatar_tag(:email => comment.email, :url => comment.url, :size => 48, :class => 'img-circle') %>
  <p class='action'><span class='label label-danger'><%= t("admin.feedback.state.#{comment.state}") %></span></p>
</td>
<td colspan='4'>
  <%= link_to comment.article.title, admin_feedbacks_path(article_id: comment.article) %>
  <p>
    <small>
      <%= t('.by:')%> <%= comment.author %> - <%= mail_to comment.email %>
      <%= t('.on') %> <%= l(comment.created_at) %>
    </small>
  </p>
  <p>
    <small>
      <%= t(".this_comment_by_was_flagged_as_spam", author: comment.author, cancel_link: link_to(t('.cancel'), change_state_admin_feedback_path(comment, context: :listing), remote: true)) %>
    </small>
  </p>
</td>
