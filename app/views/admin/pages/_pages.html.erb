<%- if @pages.empty? %>
<tr>
  <td colspan="5">
    <%= t(".no_pages") %>
  </td>
</tr>
<%- end %>

<% for page in @pages %>
<tr>
  <td>
    <% if current_user.admin? || current_user.id == record.user_id %>
      <%= link_to page.title, edit_admin_page_path(page), class: 'edit' %>
    <% end %>

    <%= show_actions page %>
  </td>
  <td><%= page.name%></td>
  <td>
    <%= author_link(page) %><br>
    <small><%= l(page.created_at) %></small>
  </td>
</tr>
<% end %>
<%= display_pagination(@pages, 5)%>
