<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class='panel-title'><%= t(".your_drafts") %></h3>
  </div>
  <div class="panel-body">
    <ul class='list-unstyled'>
      <% if @drafts.empty? %>
        <li class='alert alert-info'>
        <%= link_to t(".no_drafts_yet"), new_admin_content_path %> ?
        </li>
      <% else %>
        <% for post in @drafts -%>
          <li>
          <h5>
            <%= link_to(post.title, admin_edit_contents_path(post)) %>
            <%= display_date_and_time(post.created_at) %>
          </h5>
          <p><%= post.body.strip_html.slice(0,300) if post.body %></p>
          <hr>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
