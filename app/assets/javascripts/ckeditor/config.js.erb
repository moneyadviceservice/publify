<%
  base_path = ''
  base_path << (Rails.application.config.action_controller.asset_host || '')
  base_path << (Rails.application.config.relative_url_root || '')
  base_path << Rails.application.config.assets.prefix
%>

CKEDITOR.editorConfig = function (config) {
  config.filebrowserImageBrowseLinkUrl = <%= "'#{base_path}/admin/ckeditor/pictures';" %>
  config.filebrowserImageBrowseUrl = <%= "'#{base_path}/admin/ckeditor/pictures';" %>
  config.filebrowserImageUploadUrl = <%= "'#{base_path}/admin/ckeditor/pictures';" %>
  config.filebrowserBrowseUrl = <%= "'#{base_path}/admin/ckeditor/attachment_files';" %>
  config.filebrowserUploadUrl = <%= "'#{base_path}/admin/ckeditor/attachment_files';" %>
  config.extraPlugins = 'sourcedialog';
  config.allowedContent = true;
  config.contentsCss = <%= "'#{base_path}/ckeditor/editor.css';" %>

  config.toolbar =
  [
    {
      name: 'styles',
      items: ['Format']
    },
    {
      name: 'basicstyles',
      items: ['Bold', 'Italic', 'Underline', '-', 'RemoveFormat']
    },
    {
      name: 'paragraph',
      items: ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', '-']
    },
    {
      name: 'links',
      items: ['Link', 'Unlink']
    },
    {
      name: 'insert',
      items: ['Image', 'Sourcedialog']
    }
  ];
};
